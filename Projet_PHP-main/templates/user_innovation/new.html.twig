<script>
    document.getElementById('innovationForm').addEventListener('submit', function (event) {
        event.preventDefault(); // Prevent form submission to handle validation
        
        let isValid = true;
        const errors = {}; // Object to store errors

        // Reset previous errors
        document.querySelectorAll('.error').forEach(function (errorElement) {
            errorElement.textContent = '';
        });

        // Validation logic
        const idMembre = document.getElementById('idMembre');
        const idMembreValue = idMembre.value.trim();
        if (!idMembreValue) {
            errors.idMembre = "L'ID du membre est requis.";
        } else if (!/^\d{8}$/.test(idMembreValue)) {
            errors.idMembre = "L'ID du membre doit être un chiffre de 8 caractères.";
        }

        const nomClub = document.getElementById('nomClub');
        if (!nomClub.value.trim()) {
            errors.nomClub = "Le nom du club est requis.";
        }

        const titre = document.getElementById('titre');
        if (!titre.value.trim()) {
            errors.titre = "Le titre est requis.";
        }

        const descriptionInnovation = document.getElementById('descriptionInnovation');
        if (!descriptionInnovation.value.trim()) {
            errors.descriptionInnovation = "La description est requise.";
        }

        const dateCreationInnovation = document.getElementById('dateCreationInnovation');
        const currentDate = new Date().toISOString().split('T')[0]; // Get today's date in YYYY-MM-DD format
        if (dateCreationInnovation.value !== currentDate) {
            errors.dateCreationInnovation = "La date de création doit être aujourd'hui.";
        }

        const userEmail = document.getElementById('userEmail');
        const userEmailValue = userEmail.value.trim();
        if (!userEmailValue) {
            errors.userEmail = "L'email de l'utilisateur est requis.";
        } else if (!/\S+@\S+\.\S+/.test(userEmailValue)) {
            errors.userEmail = "Veuillez entrer un email valide.";
        }

        // Display errors if any
        if (Object.keys(errors).length > 0) {
            isValid = false;
            for (const field in errors) {
                const errorElement = document.getElementById(field + 'Error');
                if (errorElement) {
                    errorElement.textContent = errors[field];
                }
            }
        }

        // Submit the form if valid
        if (isValid) {
            event.target.submit();
        }
    });
</script>
