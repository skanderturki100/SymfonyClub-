      </nav>
    </div>
  </header>

  <main class="main">

    <!-- Page Title -->
    <div class="page-title dark-background">
      <div class="container position-relative">
        <h1>Create Feedback</h1>
        <p>Provide your feedback for the selected club.</p>
        <nav class="breadcrumbs">
          <ol>
            <li><a href="index.html">Home</a></li>
            <li><a href="{{ path('app_feedback_index') }}">Feedback</a></li>
            <li class="current">Create Feedback</li>
          </ol>
        </nav>
      </div>
    </div><!-- End Page Title -->

    <!-- Feedback Form Section -->
    <section id="feedback-section" class="feedback-section section d-flex justify-content-center align-items-center min-vh-100">

      <!-- Section Title -->
      <div class="container section-title" data-aos="fade-up">
        <h2>Create Feedback</h2>
        <p>Provide your valuable feedback for the selected club below.</p>
      </div><!-- End Section Title -->

      <!-- Feedback Form -->
<div class="container" data-aos="fade-up">
    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="form-group mb-3">
                {{ form_label(form.idClub, 'Select Club', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.idClub, {'attr': {'class': 'form-control', 'placeholder': 'Choose a club'}}) }}
                {{ form_errors(form.idClub) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.idUser, 'Select Person', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.idUser, {'attr': {'class': 'form-control', 'placeholder': 'Choose a person'}}) }}
                {{ form_errors(form.idUser) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.dateFeedback, 'Feedback Date', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.dateFeedback, {'attr': {'class': 'form-control', 'placeholder': 'Select a date', 'type': 'date'}}) }}
                {{ form_errors(form.dateFeedback) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.commentaire, 'Your Comment', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.commentaire, {'attr': {'class': 'form-control', 'placeholder': 'Enter your feedback here'}}) }}
                {{ form_errors(form.commentaire) }}
            </div>


            <div class="form-group mb-3">
                {{ form_label(form.avis, 'Rating', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.avis, {'attr': {'class': 'form-control', 'placeholder': 'Select a rating'}}) }}
                {{ form_errors(form.avis) }}
            </div>

            <div class="form-group text-center mt-4">
                <button type="submit" class="btn btn-primary">Submit Feedback</button>
                <a href="{{ path('app_club_index') }}" class="btn btn-secondary">Back</a>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>
<!-- End Feedback Form -->


