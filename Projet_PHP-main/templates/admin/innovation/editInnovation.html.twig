{% extends 'baseAdmin.html.twig' %}

{% block title %}Créer une nouvelle Innovation{% endblock %}

{% block body %}



<style>
    body {
        background: linear-gradient(135deg, #eef2f3, #8fa9b7);
        min-height: 100vh;
        margin: 0;
        font-family: Arial, sans-serif;
    }
    .container {
        background: #ffffff;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        max-width: 600px;
        margin: 50px auto;
    }
    h1 {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #2c3e50;
        font-weight: bold;
        text-align: center;
        margin-bottom: 30px;
    }
    form label {
        font-weight: bold;
        margin-top: 15px;
        display: block;
        color: #34495e;
    }
    form input, form textarea, form select {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        margin-bottom: 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-sizing: border-box;
        font-size: 16px;
        color: #2c3e50;
    }
    form input:focus, form textarea:focus, form select:focus {
        border-color: #27ae60;
        outline: none;
        box-shadow: 0 0 5px rgba(39, 174, 96, 0.5);
    }
    .btn-submit {
        background-color: #27ae60;
        border: none;
        color: white;
        padding: 10px 15px;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }
    .btn-submit:hover {
        background-color: #229954;
    }
    .btn-back {
        display: block;
        margin-top: 10px;
        text-align: center;
        font-size: 14px;
        text-decoration: none;
        color: #34495e;
        transition: color 0.3s ease;
    }
    .btn-back:hover {
        color: #27ae60;
    }
</style>

<div class="container">
    <h1>Modifier l'Innovation</h1>

    <form action="{{ path('admin_innovation_edit', {'id': innovation.id}) }}" method="post">
        <label for="idMembre">ID Membre</label>
        <input 
            type="text" 
            id="idMembre" 
            name="idMembre" 
            value="{{ innovation.idMembre }}" 
            maxlength="8" 
            pattern="\d{8}" 
            title="L'ID Membre doit être un nombre de 8 chiffres" 
            required>
        
        <label for="nomClub">Nom du Club</label>
        <input 
            type="text" 
            id="nomClub" 
            name="nomClub" 
            value="{{ innovation.nomClub }}" 
            pattern="[a-zA-Z\s]+" 
            title="Le Nom du Club ne doit contenir que des lettres" 
            required>
        
        <label for="descriptionInnovation">Description</label>
        <textarea 
            id="descriptionInnovation" 
            name="descriptionInnovation" 
            rows="4" 
            required>{{ innovation.descriptionInnovation }}</textarea>
        
        <label for="titre">Titre</label>
        <input 
            type="text" 
            id="titre" 
            name="titre" 
            value="{{ innovation.titre }}" 
            pattern="[a-zA-Z0-9\s]+" 
            title="Le Titre ne doit contenir que des lettres et des chiffres" 
            required>
        
       <label for="dateCreationInnovation">Date de Création</label>
<input 
    type="date" 
    id="dateCreationInnovation" 
    name="dateCreationInnovation" 
    value="{{ "now"|date('Y-m-d') }}" 
    min="{{ "now"|date('Y-m-d') }}" 
    max="{{ "now"|date('Y-m-d') }}" 
    title="La Date de Création doit être uniquement aujourd'hui" 
    required>
        
        <label for="statusInnovation">Status</label>
        <select id="statusInnovation" name="statusInnovation" required>
            <option value="Approuvé" {{ innovation.statusInnovation == 'Approuvé' ? 'selected' : '' }}>Approuvé</option>
            <option value="En attente" {{ innovation.statusInnovation == 'En attente' ? 'selected' : '' }}>En attente</option>
            <option value="Rejeté" {{ innovation.statusInnovation == 'Rejeté' ? 'selected' : '' }}>Rejeté</option>
        </select>

        <button type="submit" class="btn-submit">Mettre à jour</button>
    </form>

    <a href="{{ path('admin_innovation_index') }}" class="btn-back">Retour à la liste des innovations</a>
</div>



















</main>
</body>

{% endblock %}
