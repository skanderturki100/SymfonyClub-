{% extends "baseAdmin.html.twig" %}

{% block body %}

<body>
    <main id="main" class="main">





<style>
    body {
        background: linear-gradient(135deg, #eef2f3, #8fa9b7);
        font-family: 'Arial', sans-serif;
        margin: 0;
        min-height: 100vh;
    }

    .container {
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        padding: 30px;
        max-width: 800px;
        margin: 50px auto;
    }

    h1 {
        text-align: center;
        color: #2c3e50;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: bold;
        margin-bottom: 30px;
    }

    p {
        font-size: 16px;
        color: #34495e;
        line-height: 1.6;
    }

    .details {
        margin-bottom: 20px;
    }

    .details strong {
        color: #2c3e50;
        font-weight: bold;
    }

    .btn-action {
        display: inline-block;
        padding: 10px 20px;
        margin-top: 20px;
        border-radius: 5px;
        text-align: center;
        font-size: 16px;
        color: white;
        text-decoration: none;
        background-color: #27ae60;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-action:hover {
        background-color: #229954;
    }

    .btn-delete {
        background-color: #e74c3c;
    }

    .btn-delete:hover {
        background-color: #c0392b;
    }

    .btn-back {
        display: inline-block;
        padding: 10px 20px;
        margin-top: 20px;
        border-radius: 5px;
        font-size: 16px;
        text-align: center;
        background-color: #34495e;
        color: white;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .btn-back:hover {
        background-color: #2c3e50;
    }

    /* Styles pour gérer l'image de l'événement */
    .cases-img {
        margin-top: 20px;
        text-align: center;
    }

    .cases-img img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .cases-img img:hover {
        transform: scale(1.05);
    }

    /* Styles ajoutés pour gérer le débordement de texte dans la description */
    .details p {
        word-wrap: break-word;
        word-break: break-word;
        max-width: 100%;
        overflow-wrap: break-word;
    }
</style>

<div class="container">
    <h1>Détails de l'Événement</h1>

    <div class="details">
        <p><strong>ID :</strong> {{ event.id }}</p>
        <p><strong>Nom :</strong> {{ event.nomEvent }}</p>
        <p><strong>Date de début :</strong> {{ event.debutEvent|date('Y-m-d') }}</p>
        <p><strong>Date de fin :</strong> {{ event.finEvent|date('Y-m-d') }}</p>
        <p><strong>Type :</strong> {{ event.typeEvent }}</p>
        <p><strong>ID du Club :</strong> {{ event.idClub }}</p>
        <p><strong>Capacité :</strong> {{ event.capacite }}</p>
        <p><strong>Description :</strong> {{ event.descriptionEvent }}</p>
        <p><strong>Membres Inscrits :</strong> {{ event.membreInscrits|join(', ') }}</p>
        <p><strong>Ressources :</strong> {{ event.ressources|join(', ') }}</p>

        <!-- Affichage de l'image -->
        <div class="cases-img">
            {% if event.photo %}
                <img src="{{ asset('uploads/images/' ~ event.photo) }}" alt="Image de l'événement">
            {% else %}
                <p>Aucune image disponible pour cet événement.</p>
            {% endif %}
        </div>
    </div>

    <a href="{{ path('admin_events_edit', {'id': event.id}) }}" class="btn-action">Modifier</a>

    <form action="{{ path('admin_events_delete', {'id': event.id}) }}" method="post" style="display:inline;">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
        <button type="submit" class="btn-action btn-delete">Supprimer</button>
    </form>

    <a href="{{ path('admin_events_index') }}" class="btn-back">Retour à la liste</a>
</div>










</main>
</body>
{% endblock %}    