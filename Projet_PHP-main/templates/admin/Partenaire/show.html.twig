{% extends 'baseAdmin.html.twig' %}

{% block body %}
<body>
    <main id="main" class="main">
     <section id="partenaire-details" class="starter-section section">
      
      <div class="container" data-aos="fade-up">
        <h2>{{ partenaire.nomPartenaire }}</h2>
        <ul>
          <li>Club: {{ partenaire.clubPartenaire }}</li>
          <li>Téléphone: {{ partenaire.telPartenaire }}</li>
          <li>Email: {{ partenaire.mailPartenaire }}</li>
          <li>Type: {{ partenaire.typePartenaire }}</li>
          <li>Date du partenariat: {{ partenaire.datePartenariat|date('d/m/Y') }}</li>
          <li>Projet: {{ partenaire.projet }}</li>
          <li>Statut du partenariat: {{ partenaire.statusPartenariat }}</li>
        </ul>

        <div class="mt-3">
          <a href="{{ path('admin_partenaire_edit', {'id': partenaire.idPartenaire}) }}" class="btn btn-primary">Modifier</a>
          <a href="{{ path('admin_partenaire_delete', {'id': partenaire.idPartenaire}) }}" 
             class="btn btn-danger" 
             onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce partenaire ?')">Supprimer</a>
          <a href="{{ path('admin_partenaire_index') }}" class="btn btn-secondary">Retour à la liste des partenaires</a>
        </div>
      </div><!-- End Partner Details Section -->

    </section><!-- End Section -->
    </main>
</body>
{% endblock %}
      