{# templates/reservations/show.html.twig #}


{% extends 'baseAdmin.html.twig' %}
{% block title %}Détails de la réservation{% endblock %}

{% block body %}
<body>
  <main id="main" class="main">
    <div class="container mt-5">
        <h1 class="text-center mb-4 text-burgundy">Détails de la réservation</h1>

        <div class="card p-4 shadow-lg">
            <p><strong>Nom de la ressource :</strong> {{ reservation.ressource ? reservation.ressource.nom : 'Aucune ressource' }}</p>
            <p><strong>Description de la ressource :</strong> {{ reservation.ressource ? reservation.ressource.description : 'Pas de description' }}</p>
            <p><strong>Date de début :</strong> {{ reservation.dateDebut|date('d/m/Y H:i') }}</p>
            <p><strong>Date de fin :</strong> {{ reservation.dateFin|date('d/m/Y H:i') }}</p>
            <p><strong>Motif :</strong> {{ reservation.motif }}</p>

            <div class="d-flex justify-content-start mt-4">
                <a href="{{ path('app_reservations_edit', {id: reservation.id}) }}" class="btn btn-custom btn-lg me-3">
                    <i class="fas fa-edit"></i> Modifier
                </a>
                <a href="{{ path('app_reservations_delete', {id: reservation.id}) }}" class="btn btn-danger btn-lg me-3" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette réservation ?')">
                    <i class="fas fa-trash-alt"></i> Supprimer
                </a>
                <a href="{{ path('app_reservations') }}" class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
            </div>
        </div>
    </div>
    </main><!-- End #main -->
</body>
{% endblock %}