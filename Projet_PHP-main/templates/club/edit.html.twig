{% extends 'base.html.twig' %}

{% block title %}Edit Club{% endblock %}

{% block body %}
  <header id="header" class="header d-flex align-items-center fixed-top">
    <div class="container-fluid container-xl position-relative d-flex align-items-center justify-content-between">
      <a href="{{path('app_homepage')}}" class="logo d-flex align-items-center">
        <!-- Uncomment the line below if you also wish to use an image logo -->
        <img src="{{ asset('img/logo.png') }}" alt="">
        <h1 class="sitename">clubNet</h1>
      </a>

      <nav id="navmenu" class="navmenu">
        <ul>
        <li><a href="{{path('app_homepage')}}" >Home</a></li>
        <li><a href="{{path('app_club_index')}}">Club</a></li>
        <li><a href="{{path('app_feedback_index')}}">Feedback</a></li>
        <li><a href="{{ path('app_partenaire_index') }}">Partenaire</a></li>
      <li><a href="{{ path('user_events_index') }}">Event</a></li>
        <li><a href="{{ path('user_innovation_index') }}">Innovation</a></li>
        <li><a href="{{ path('app_ressourcess') }}">Resources</a></li>
        <li><a href="{{path('app_reservationss')}}" >Reservations</a></li>
        <li><a href="{{path('app_contact')}}" >Contact</a></li>
        <li class="dropdown">
            <a href="javascript:void(0)" class="dropdown-toggle">Options</a>
            <ul class="dropdown-menu">
                <li><a href="{{path('app_login')}}">Sign in</a></li>
                <li><a href="{{path('app_register')}}">Register</a></li>
            </ul>
        </li>
        </ul>
        <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
      </nav>
    </div>
  </header>

  <main class="main">
    <!-- Page Title -->
    <div class="page-title dark-background">
      <div class="container position-relative">
        <h1>Edit Club</h1>
        <p>Modify the details of the club below and click save to apply changes.</p>
        <nav class="breadcrumbs">
          <ol>
            <li><a href="#">Home</a></li>
            <li><a href="{{ path('app_club_index') }}">Clubs</a></li>
            <li class="current">Edit Club</li>
          </ol>
        </nav>
      </div>
    </div><!-- End Page Title -->

    <!-- Edit Club Form Section -->
    <section id="edit-club" class="edit-club section d-flex align-items-center justify-content-center" style="min-height: 80vh;">
      <div class="container" data-aos="fade-up" style="max-width: 600px; width: 100%;">

        <!-- Section Title -->
        <div class="section-title mb-5" data-aos="fade-up">
          <h2>Edit Club</h2>
          <p>Use the form below to edit the details of the club.</p>
        </div>

        <!-- Form Start -->
        <div class="container" data-aos="fade-up" style="max-width: 800px; width: 100%;">
        <h3>Create Club</h3>

        {{ form_start(form) }}
        
        <div class="mb-4">
          {{ form_label(form.nomClub) }}
          {{ form_widget(form.nomClub, { 'attr': {'class': 'form-control', 'placeholder': 'Enter the club name'} }) }}
          {{ form_errors(form.nomClub) }}
        </div>

        <div class="mb-4">
          {{ form_label(form.categorieClub) }}
          {{ form_widget(form.categorieClub, { 'attr': {'class': 'form-select', 'placeholder': 'Select a category'} }) }}
          {{ form_errors(form.categorieClub) }}
        </div>

        <div class="mb-4">
          {{ form_label(form.dateCreationClub) }}
          {{ form_widget(form.dateCreationClub, { 'attr': {'class': 'form-control', 'placeholder': 'Select the creation date'} }) }}
          {{ form_errors(form.dateCreationClub) }}
        </div>

        <div class="mb-4">
          {{ form_label(form.adresseClub) }}
          {{ form_widget(form.adresseClub, { 'attr': {'class': 'form-control', 'placeholder': 'Enter the club location'} }) }}
          {{ form_errors(form.adresseClub) }}
        </div>

        <div class="mb-4">
          {{ form_label(form.telClub) }}
          {{ form_widget(form.telClub, { 'attr': {'class': 'form-control', 'placeholder': 'Enter the phone number'} }) }}
          {{ form_errors(form.telClub) }}
        </div>

        <div class="mb-4">
          {{ form_label(form.siteWeb) }}
          {{ form_widget(form.siteWeb, { 'attr': {'class': 'form-control', 'placeholder': 'Enter the website URL'} }) }}
          {{ form_errors(form.siteWeb) }}
        </div>

        <div class="mb-4">
          {{ form_label(form.statusClubs) }}
          {{ form_widget(form.statusClubs, { 'attr': {'class': 'form-select'} }) }}
          {{ form_errors(form.statusClubs) }}
        </div>

        <div class="mb-4">
          {{ form_label(form.attribute5) }}
          {{ form_widget(form.attribute5, { 'attr': {'class': 'form-control', 'placeholder': 'Any additional information'} }) }}
          {{ form_errors(form.attribute5) }}
        </div>

        <div class="mb-4">
          {{ form_label(form.photoFile) }} <!-- Change from 'imageFile' to 'photo' -->
          {{ form_widget(form.photoFile, { 'attr': {'class': 'form-control'} }) }}
          {{ form_errors(form.photoFile) }}
        </div>

        <div class="mb-4">
          {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-primary btn-block'} }) }}
        </div>

        {{ form_end(form) }}

        <a href="{{ path('app_club_index') }}" class="btn btn-secondary">Back to Clubs</a>

      </div>
    </section><!-- End Edit Club Section -->

  </main><!-- End Main Content -->

  <footer id="footer" class="footer dark-background">
    <div class="container">
      <h3 class="sitename">clubNet</h3>
      <p>Passez Ã  l'action, ouvrez-vous au monde et rencontrez de nouveaux amis</p>
      <div class="social-links d-flex justify-content-center">
        <a href=""><i class="bi bi-twitter-x"></i></a>
        <a href=""><i class="bi bi-facebook"></i></a>
        <a href=""><i class="bi bi-instagram"></i></a>
        <a href=""><i class="bi bi-skype"></i></a>
        <a href=""><i class="bi bi-linkedin"></i></a>
      </div>
      <div class="container">
        <div class="copyright">
          <span>Copyright</span> <strong class="px-1 sitename">clubNet</strong> <span>All Rights Reserved</span>
        </div>
        <div class="credits">
          Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
        </div>
      </div>
    </div>
  </footer>

  <!-- Scroll Top -->
  <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Preloader -->
  <div id="preloader"></div>

  <!-- Vendor JS Files -->
  <script src="{{ asset('vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
  <script src="{{ asset('vendor/php-email-form/validate.js') }}"></script>
  <script src="{{ asset('vendor/aos/aos.js') }}"></script>
  <script src="{{ asset('vendor/purecounter/purecounter_vanilla.js') }}"></script>
